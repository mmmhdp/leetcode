class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
       
        if not s:
            return 0

        if len(s) == 1:
            return 1

        left = 0
        max_sub_len = 0
        used = dict()

        for ind, char in enumerate(s):

            if char in used.keys() and used[char] >= left:
                left = used[char] + 1
            else: 
                max_sub_len = max(ind - left + 1, max_sub_len)
            used[char] = ind
        return max_sub_len
